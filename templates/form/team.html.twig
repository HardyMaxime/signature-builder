{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.phone) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.role) }}
        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Ajouter un personnel</button>
    </div>
{{ form_end(form) }}