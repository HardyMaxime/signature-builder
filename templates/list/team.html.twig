<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Personnel</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% if teams is empty %}
            <tr class="text-center">
                <td colspan="3">Aucune équipe trouvée</td>
            </tr>
        {% endif %}
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.firstName }} {{ team.lastName }}</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('team_signature', { id: team.id }) }}" class="btn btn-primary">Signature</a>
                        <a href="{{ path('team_signature_alt', { id: team.id }) }}" class="btn btn-secondary">Signature Alt</a>
                        <a href="{{ path('team_update', { id: team.id }) }}" class="btn btn-warning">Modifier</a>
                        <form action="{{ path('team_delete', { id: team.id }) }}" method="POST">
                            <input type="hidden" name="token" value="{{ csrf_token('team_delete') }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce personnel ?')">Supprimer</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>